{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@linefusion/tsconfig/default.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/api.ts"]
}
